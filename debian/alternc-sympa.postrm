#!/bin/bash -e

case "$1" in
    purge)

        update-rc.d -f wwsympa remove
        update-rc.d -f sympasoap remove
        ;;
    
    remove|upgrade|failed-upgrade|disappear|abort-install|abort-upgrade)
        exit 0
        ;;
    
    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

